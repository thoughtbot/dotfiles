# Unix
alias tlf="tail -f"
alias ...='../..'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'
alias -g G='| grep'
alias -g M='| less'
alias -g L='| wc -l'
alias -g ONE="| awk '{ print \$1}'"
alias e="$EDITOR"
alias v="$VISUAL"
alias h="history"
alias up="cd .."

# redefine commands to add options
alias cp="cp -i"
alias df="df -h"
alias du="du -h"
alias ln='ln -v'
alias mkdir='mkdir -p'
alias mv="mv -i"
alias rm="rm -i"

# git
alias gci="git pull --rebase && rake && git push"

# Bundler
alias b="bundle"

# Tests and Specs
alias t="ruby -I test"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"
alias m="migrate"
alias rk="rake"
alias s="rspec"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
